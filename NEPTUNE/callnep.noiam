host=$1
sed s/HOST/${host}/g TEMPLATES/template.noiam.yaml > /tmp/${host}.yaml
sed s/HOST/${host}/g TEMPLATES/remote.noiam.txt > /tmp/${host}.remote.txt

mv /tmp/${host}.yaml ~/rpms/apache-tinkerpop-gremlin-console-3.6.5/conf
mv /tmp/${host}.remote.txt ~/rpms/apache-tinkerpop-gremlin-console-3.6.5/conf

echo "+++"
cat ~/rpms/apache-tinkerpop-gremlin-console-3.6.5/conf/${host}.yaml
echo "+++"
cat ~/rpms/apache-tinkerpop-gremlin-console-3.6.5/conf/${host}.remote.txt

echo "+++"

cd ~/rpms/apache-tinkerpop-gremlin-console-3.6.5
bin/gremlin.sh  -i conf/${host}.remote.txt
